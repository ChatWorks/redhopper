%h2 Kanbans

%form
	%ol.kanban
		- @kanban_board.columns.each do |column|
			%li
				%h3
					= column.issue_status.name
					%small{title: t(".issues_count")} (#{column.sorted_issues.length + column.unsorted_issues.length})
				%h4
					= t(".sorted")
				%ol
					- if first_kanban = column.sorted_issues.first
						%hr{id: "kanban-#{first_kanban.id}-before"}
					- last_kanban = column.sorted_issues.last
					= render partial: 'kanban', collection: column.sorted_issues, locals: { column: column, first_kanban: first_kanban, last_kanban: last_kanban }
				%h4
					= t(".unsorted")
				%ol
					= render partial: 'kanban', collection: column.unsorted_issues

- content_for :header_tags do
	= stylesheet_link_tag 'redhopper', :plugin => 'redhopper'
	= javascript_include_tag 'redhopper', :plugin => 'redhopper'

= context_menu issues_context_menu_path
