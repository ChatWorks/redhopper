%h3
  = t('.configuration.title')

%table
  %tbody
    %tr
      %th
        = t('.configuration.hidden_trackers.title')
      %td
        - Tracker.sorted.each do |tracker|
          = check_box_tag "settings[hidden_tracker_ids][]", tracker.id, Setting.plugin_redhopper.present? && Setting.plugin_redhopper["hidden_tracker_ids"].present? ? Setting.plugin_redhopper["hidden_tracker_ids"].include?(tracker.id.to_s) : false
          = tracker.name

- features = ["move_back_to_unsorted", "only_open_statuses"]
%h3
  = t('.feature_switches.title')

%table
  %tbody
    = render partial: "feature", collection: features
